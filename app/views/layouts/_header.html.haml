.headerBox
  .headerBox__upperBox
    .headerBox__upperBox__furimaIcon
      = link_to root_path do
        = image_tag "logo.png", hight:"45px", width: "140px"
    .headerBox__upperBox__render
      = form_tag("#", method: :get) do
        = text_field_tag("text", "",{placeholder: "キーワードから探す", class: "headerBox__upperBox__search__text"})
    .headerBox__upperBox__searchIcon 
      = image_submit_tag "icon-search 1.png",width: "45px", height: "40px"
  .headerBox__lowerBox  
    .headerBox__lowerBox__leftBox
      .headerBox__lowerBox__leftBox__category
        %button 
          カテゴリー
      .headerBox__lowerBox__leftBox__brand
        ブランド
    .headerBox__lowerBox__rightBox
      .headerBox__lowerBox__rightBox__login
        - if user_signed_in?
          .headerBox__lowerBox__rightBox__registration
            = link_to "ログアウト",destroy_user_session_path, method: :delete, class: "logaut_btn"
          .headerBox__lowerBox__rightBox__registration
            = link_to "マイページ",user_path(current_user),class: "logaut_btn"
        - else
          .headerBox__lowerBox__rightBox__registration
            = link_to "ログイン", new_user_session_path, class: "logaut_btn"
          .headerBox__lowerBox__rightBox__registration
            = link_to "新規登録", new_user_registration_path,class: "logaut_btn"